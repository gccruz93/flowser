{
  "manifest_version": 3,
  "name": "Flowser",
  "version": "1.0.5",
  "description": "A better flow in web experience.",
  "icons": {
    "48": "popup/icon.png"
  },
  "action": {
    "default_title": "Flowser",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "permissions": [
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://*.twitch.tv/*"
  ],
  "content_scripts": [
    {
      "js": ["sites/youtube.js"],
      "css": ["sites/youtube.css"],
      "matches": ["https://*.youtube.com/*"]
    },
    {
      "js": ["sites/twitch.js"],
      "matches": ["https://*.twitch.tv/*"]
    }
  ]
}